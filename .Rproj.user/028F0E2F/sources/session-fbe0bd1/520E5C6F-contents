```{r}
#| fig-cap: Correlación entre alfabetización digital y PIB (r = 0.46)
#| fig-cap-location: bottom
#| label: fig-descr
#| echo: false 

scatter <- icils %>% group_by(CNTRY) %>% select(alf_digital, adm_digital, logpib, pib) %>%   na.omit() %>% 
  summarise_all(mean)

sjPlot::plot_scatter(scatter, pib, alf_digital,
            dot.labels = to_label(scatter$CNTRY),
            fit.line = "lm",
            show.ci = TRUE,
            axis.titles = c("Producto Interno Bruto per cápita ($US)",
            "Alfabetización digital"),
            colors = "#7b241c"
            )
